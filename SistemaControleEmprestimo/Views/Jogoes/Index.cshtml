@model IEnumerable<SistemaControleEmprestimo.Models.Jogo>

@{
    ViewBag.Title = "Index";
}

<h2>Jogos</h2>

@using (Html.BeginForm("Index", "Jogoes", FormMethod.Get, new { @class = "form-inline" }))
{
    <input type="text" placeholder="Buscar jogo" name="busca" class="form-control" />
    <input type="submit" class="btn btn-default" value="Buscar" />
}

<br />
<p>
    @Html.ActionLink("Novo Jogo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
