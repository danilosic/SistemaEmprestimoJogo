@model IEnumerable<SistemaControleEmprestimo.Models.Emprestimo>

@{
    ViewBag.Title = "Index";
}

<h2>Empréstimos</h2>

<p>
    @Html.ActionLink("Novo Empréstimo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Amigo
        </th>
        <th>
            Jogo
        </th>
        <th>
            Descrição do Empréstimo
        </th>
        <th>
            Data do Empréstimo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amigo.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jogo.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataEmprestimo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
